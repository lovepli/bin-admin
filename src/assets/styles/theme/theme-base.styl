.basic-layout {
  display: flex;
  flex-direction: column;
  width: 100%;
  min-height: 100%;
}

.layout {
  display: flex;
  min-height: 100vh;
  flex: auto;
  flex-direction: column;
  background: #f0f2f5;
  &-has-aside {
    flex-direction: row;
  }
  &-aside {
    background: #001529;
    transition: all .2s;
    position: relative;
    z-index: 10;
    min-height: 100%;
    box-shadow: 2px 0 6px rgba(0, 21, 41, .35);
    &.fixed-aside {
      position: fixed;
      top: 0;
      left: 0;
      height: 100%;
      box-shadow: 2px 0 8px 0 rgba(29, 35, 41, .05);
    }
    .logo {
      position: relative;
      width: 100%;
      height: 65px;
      overflow: hidden;
      padding-left: 18px;
      border-bottom: 1px solid rgba(0, 21, 41, .05);
      .icon {
        height: 38px;
      }
      h1 {
        font-size: 18px;
        margin: 0 0 0 12px;
        white-space: nowrap
        color: #fff;
      }
    }
    &-children {
      padding: 16px 0;
      height: calc(100vh - 65px);
      overflow: hidden;
      &:hover {
        overflow-y: auto;
      }
      &::-webkit-scrollbar {
        display: none;
      }
    }
    // 收起菜单样式
    .menu-collapsed .bin-dropdown, .menu-collapsed .bin-dropdown .bin-dropdown-rel a,
    .menu-collapsed .bin-tooltip, .menu-collapsed .bin-tooltip .bin-tooltip-rel {
      width: 100%;
    }
    a.drop-menu-a {
      display: inline-block;
      padding: 10px 15px;
      width: 100%;
      text-align: center;
      color: rgba(255, 255, 255, .65);
    }
  }
  &-header, &-footer {
    flex: 0 0 auto;
  }
  &-header {
    height: 64px;
    padding: 0 50px;
    line-height: 64px;
    background: #001529;
    &.fixed-header {
      position: fixed;
      top: 0;
      transition: width .2s;
    }
    .global-header {
      position: relative;
      display: flex;
      align-items: center;
      height: 64px;
      padding: 0;
      background: #fff;
      box-shadow: 0 1px 4px rgba(0, 21, 41, .08);
      &-trigger {
        height: 64px;
        padding: 0 24px;
        font-size: 22px;
        cursor: pointer;
        transition: all .3s, padding 0s;
      }
      &-right {
        .dropdown-trigger {
          display: inline-block;
          height: 100%;
          padding: 0 12px;
          cursor: pointer;
          transition: all .3s;
          &:hover {
            background: rgba(0, 0, 0, .025);
          }
        }
      }
    }
    .top-nav-header {
      position: relative;
      width: 100%;
      height: 64px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, .15);
      transition: background .3s, width .2s;
      &-main {
        display: flex;
        height: 64px;
        padding-left: 24px;
        &.wide {
          max-width: 1200px;
          margin: auto;
          padding-left: 0;
        }
      }
      .logo {
        position: relative;
        width: 165px;
        height: 64px;
        overflow: hidden;
        line-height: 64px;
        transition: all .3s;
        img {
          display: inline-block;
          height: 32px;
          vertical-align: middle;
        }
        h1 {
          display: inline-block;
          margin: 0 0 0 12px;
          font-weight: 400;
          font-size: 16px;
          vertical-align: top;
          color: #ffffff;
        }
      }
      .dropdown-trigger {
        color: hsla(0, 0%, 100%, .85);
        &:hover {
          background: #1890ff;
        }
      }
    }
  }
  &-main {
    position: relative;
    flex: auto;
    margin: 24px 24px 0;
    transition: all .2s;
    min-height: 0;
  }
  &-content-wrap {
    width: 100%;
    min-height: 100%;
    transition: .3s;
  }
  &-footer {
    color: rgba(0, 0, 0, .65);
    font-size: 14px;
    background: #f0f2f5;
    .global-footer {
      margin: 48px 0 24px;
      padding: 0 16px;
      text-align: center;
    }
  }
}


// 主题弹窗样式
.setting-panel {
  padding: 0 4px;
  .theme-tab {
    display: inline-block;
    margin-right: 20px;
    cursor: pointer;
    .icon-ios-checkmark {
      position: absolute;
      right: 2px;
      bottom: 10px;
      font-size: 30px;
      color: #1890ff;
    }
  }
}
.setting-theme-title {
  margin-bottom: 12px;
  color: rgba(0, 0, 0, .85);
  font-size: 14px;
  line-height: 22px;
  font-weight: 500;
}
.setting-list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 0;
}

// 全局收起菜单样式
.collased-menu-dropdown {
  width: 100%;
  margin: 0;
  line-height: normal;
  padding: 7px 0 6px 17px;
  clear: both;
  font-size: 12px !important;
  white-space: nowrap;
  list-style: none;
  cursor: pointer;
  transition: background .2s ease-in-out;
  .drop-menu-a {
    display: inline-block;
    width: 100%;
    position: relative;
    color: rgba(0, 0, 0, .65);
    .icon-ios-arrow-forward {
      position: absolute;
      top: 2px;
      right: 4px;
      transition: transform .2s;
    }
  }
}
.layout.layout-has-aside > .layout, .layout.layout-has-aside > .layout-content {
  overflow-x: hidden;
}


