.bin-menu-horizontal {
  height: 64px;
  line-height: 64px;
}
.bin-menu-horizontal.bin-menu-light:after {
  display: none;
}
//  表格
.bin-table-wrapper {
  border: none;
  .bin-loading {
    border: none;
  }
}

.bin-table-small .bin-table-cell, .bin-table-small .bin-button--text {
  font-size: 12px;
}

.bin-input-suffix {
  width: auto;
}

.bin-table {
  user-select: text;
}
.bin-tabs-wrapper.card .nav-wrapper {
  z-index: 0;
}
.bin-tabs-wrapper .nav-wrapper .tab-item {
  background: #fff;
}
