// 下拉框样式覆盖
.base-search .bin-dropdown-item-selected,
.base-search .bin-dropdown-item.bin-dropdown-item-selected:hover {
  background: #53beff;
  color: #fff;
}

// 登录页面输入框样式调整
.login-form {
  .bin-input {
    border: none;
    border-bottom: 1px solid #dcdee2;
    border-radius: 0;
    outline: 0;
    height: 48px;
    box-shadow: none;
    &:focus {
      border-bottom: 1px solid #6ac9f8;
    }
  }
  .bin-form-item-error .bin-input {
    box-shadow: none;
    border-bottom: 1px solid #ed4014;
  }
  .bin-input-with-prefix {
    padding-left: 58px;
  }
  .bin-input-prefix {
    width: 58px;
    padding-top: 6px;
  }
  .bin-form-item-content {
    position: relative;
    line-height: 60px;
    font-size: 12px;
  }
}
