// 下拉框样式覆盖
.base-search .bin-dropdown-item-selected,
.base-search .bin-dropdown-item.bin-dropdown-item-selected:hover {
  background: #53beff;
  color: #fff;
}

// 登录页面输入框样式调整
.login-form {
  .bin-input {
    border: none;
    border-bottom: 1px solid #dcdee2;
    border-radius: 0;
    outline: 0;
    height: 48px;
    box-shadow: none;
    &:focus {
      border-bottom: 1px solid #6ac9f8;
    }
  }
  .bin-form-item-error .bin-input {
    box-shadow: none;
    border-bottom: 1px solid #ed4014;
  }
  .bin-input-with-prefix {
    padding-left: 58px;
  }
  .bin-input-prefix {
    width: 58px;
    padding-top: 6px;
  }
  .bin-form-item-content {
    position: relative;
    line-height: 60px;
    font-size: 12px;
  }
}

// 返回顶部样式
.bin-back-top .bin-back-top-inner {
  background-color: #ffffff;
  border-radius: 50%;
  box-shadow: 0 1px 3px rgba(0, 0, 0, .2);
  i {
    color: #1890ff;
    font-size: 24px;
    padding: 8px;
  }
}
// 表格样式覆盖
.bin-table-cell {
  padding: 0 8px;
}

//列表-分页组件，弹窗样式覆盖
.table-page-detail {
  .bin-modal-body {
    height: 600px;
  }
  .bin-modal-close .icon-ios-close {
    font-size: 46px;
  }
}
