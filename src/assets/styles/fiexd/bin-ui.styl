// 下拉框样式覆盖
.base-search .bin-dropdown-item-selected,
.base-search .bin-dropdown-item.bin-dropdown-item-selected:hover {
  background: #2f8bfd;
  color: #fff;
}
// 返回顶部样式
.bin-back-top .bin-back-top-inner {
  background-color: #ffffff;
  border-radius: 50%;
  box-shadow: 0 1px 3px rgba(0, 0, 0, .2);
  i {
    color: #1890ff;
    font-size: 24px;
    padding: 8px;
  }
}
// 表格样式覆盖
.bin-table-cell {
  padding: 0 8px;
}

//列表-分页组件，弹窗样式覆盖
.table-page-detail-modal {
  .bin-modal-content {
    overflow: hidden;
  }
  .bin-modal-body {
    padding: 0;
    background: url("../images/modal-bg.png") no-repeat center bottom;
  }
  .bin-modal-close .icon-ios-close {
    font-size: 46px;
  }
  .key-label-wrap {
    border-left: none;
    border-right: none;
  }
}
