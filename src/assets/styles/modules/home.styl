.main-wrap {
  height: 100%;
  background: url("../images/banner-bg0.jpg") no-repeat 0 0;
  background-size: 100% 394px;
  transition: background .3s;
  &.mini-wrap {
    background-position: 0 -90px;
    .search-wrap {
      height: 150px;
      margin-bottom: 0;
    }
  }

  .search-wrap {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    width: 1300px;
    margin: 0 auto 0;
    height: 314px;
    transition: .3s;
    h2 {
      color: #fff;
      text-align: center;
      font-weight: 400;
      font-size: 34px;
      letter-spacing: 4px;
    }
  }
  .center-banner {
    display: flex;
    justify-content: space-between;
    width: 1300px;
    margin: 0 auto;

    .card {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 400px;
      width: 415px;
      background: #fff;
      cursor: pointer;
      transition: all 0.4s;

      .inner {
        display: flex;
        flex-direction: column;
        align-items: center;

        h2 {
          font-weight: normal;
          font-size: 17px;
          color: rgba(0, 0, 0, .85);
        }
        // .check {
        //   display: inline-block;
        //   margin-top: 1.5em;
        //   background: #1089ff;
        //   color: #fff;
        //   padding: 6px 15px;
        //   border-radius: 15px;
        //   .iconfont {
        //     font-size: 18px;
        //     vertical-align: -1px;
        //   }
        // }
      }

      &:hover {
        box-shadow: 0 10px 24px 0 rgba(0,0,0,0.12);
      }
    }
    
    .card-cen {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      height: 400px;
      width: 415px;

      .card-item {
        display: flex;
        justify-content: center;
        height: 190px;
        width: 100%;
        background: #fff;
        cursor: pointer;
        transition: all 0.4s;

        .inner {
          display: flex;
          justify-content: space-around;
          align-items: center;

          h2 {
            font-weight: normal;
            font-size: 17px;
            color: rgba(0, 0, 0, .85);
          }
        }

        &:hover {
          box-shadow: 0 10px 24px 0 rgba(0,0,0,0.12);
        }
      }  
    }
  }
  .page-wrap {
    width: 1300px;
    margin: 0 auto;
    text-align: right;
    padding: 20px 0;
  }
}
